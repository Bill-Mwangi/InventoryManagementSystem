<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bill.controllers.SuppliersController" >
    <padding> <Insets top="25" bottom="25" right="25" left="25 "/> </padding>

    <TilePane  prefHeight="200.0" prefWidth="350.0" vgap="10" hgap="10">
        <Button text="Add Supplier" onAction="#handleAddSupplier" prefHeight="120" prefWidth="110"/>
        <Button text="Supplied Products" onAction="#listSuppliedProducts" prefHeight="120" prefWidth="110"/>
        <Button text="All Suppliers" onAction="#handleAllSuppliers" prefHeight="120" prefWidth="110"/>
    </TilePane>

    <VBox alignment="BOTTOM_CENTER">
        <Button onAction="#handleBackButton" text="Back" prefHeight="40" prefWidth="80"/>
    </VBox>
</VBox>