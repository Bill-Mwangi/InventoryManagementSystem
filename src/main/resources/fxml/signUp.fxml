<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
          fx:controller="com.bill.controllers.NewUserController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap = "10">
    <padding><Insets top="25" right="25" left="25" bottom="10"/> </padding>

    <Text text="Sign Up" textAlignment="CENTER"
          GridPane.rowIndex="0" GridPane.columnSpan="2"/>
    <Label text="First Name:"
           GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <TextField fx:id="FnameField"
               GridPane.columnIndex="2" GridPane.rowIndex="1"/>
    <Label text="Last Name:"
           GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <TextField fx:id="LnameField"
               GridPane.columnIndex="2" GridPane.rowIndex="2"/>
    <Label text="Email:"
           GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <TextField fx:id="emailField"
               GridPane.columnIndex="2" GridPane.rowIndex="3"/>
    <Label text="Password"
           GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <PasswordField fx:id="passwordField"
                   GridPane.columnIndex="2" GridPane.rowIndex="4"/>
    <Label text="Confirm password"
           GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <PasswordField fx:id="confirmField"
                   GridPane.columnIndex="2" GridPane.rowIndex="5"/>
    <Button text="Sign up" GridPane.columnIndex="2" GridPane.rowIndex="6"
            onAction="#handleSignUpButton"/>
    <Button text="Back" onAction="#handleBackButton" GridPane.columnIndex="1"
            GridPane.rowIndex="6"/>

    <Text fx:id="actionTarget"
          GridPane.columnIndex="2" GridPane.rowIndex="7"/>
</GridPane>

