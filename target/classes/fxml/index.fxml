<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane styleClass="root" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bill.controllers.IndexController">
    <Text id="title" styleClass="title" text="Inventory Management System" textAlignment="CENTER" />

    <Button onAction="#handleProductsButton" styleClass="wideTile" text="Products" GridPane.rowIndex="2"/>
    <Button onAction="#handleSupplierButton" styleClass="wideTile" text="Suppliers" GridPane.rowIndex="3"/>
    <Button onAction="#handleRecipientButton" styleClass="wideTile" text="Recipients" GridPane.rowIndex="4"/>

    <VBox alignment="BOTTOM_CENTER" GridPane.rowIndex="7">
        <Button id="back" onAction="#handleQuitButton"  styleClass="backButton" text="Quit" textAlignment="CENTER" />
    </VBox>

</GridPane>
