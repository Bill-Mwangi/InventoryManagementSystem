<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bill.controllers.AvailableProductsController" stylesheets="@../css/styles.css"
      styleClass="root">

    <TableView fx:id="productsTable" styleClass="table">
        <columns>
            <TableColumn text="ID" prefWidth="100" fx:id="productID"/>
            <TableColumn text="Product Name" prefWidth="300" fx:id="productName"/>
            <TableColumn text="Description" prefWidth="450" fx:id="description"/>
            <TableColumn text="Quantity" prefWidth="100" fx:id="quantity"/>
        </columns>
    </TableView>

    <VBox alignment="BOTTOM_CENTER">
        <Button onAction="#handleBackButton" text="Back" prefHeight="40" prefWidth="80" styleClass="backButton"/>
    </VBox>
</VBox>
