<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bill.controllers.AllRecipientsController" stylesheets="@../css/styles.css"
        styleClass="root">

    <TableView fx:id="allRecipientsTable" styleClass="table">
        <columns>
            <TableColumn text="ID" prefWidth="100" fx:id="recipientID"/>
            <TableColumn text="First Name" prefWidth="150" fx:id="firstName"/>
            <TableColumn text="Last Name" prefWidth="150" fx:id="lastName"/>
            <TableColumn text="Department" prefWidth="250" fx:id="department"/>
        </columns>

    </TableView>

    <VBox alignment="BOTTOM_CENTER">
        <Button onAction="#handleBackButton" text="Back" prefHeight="40" prefWidth="80" styleClass="backButton"/>
    </VBox>
</VBox>