<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.bill.controllers.AddProductController" styleClass="root" stylesheets="@../css/styles.css">

        <Text text="Adding a new product" textAlignment="CENTER" GridPane.rowIndex="0"
              GridPane.columnSpan="2"/>
        <Label text="Product name:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="nameField" GridPane.rowIndex="3" GridPane.columnIndex="1" prefHeight="1"/>
        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="descField" GridPane.rowIndex="4" GridPane.columnIndex="1" prefHeight="3"/>
        <Label text="Quantity:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="quantityField" GridPane.rowIndex="5" GridPane.columnIndex="1" prefHeight="1"/>
        <Label text="Supplier:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="supplierField" GridPane.columnIndex="1" GridPane.rowIndex="6" prefHeight="1"/>
        <Button text="submit" GridPane.columnIndex="1" GridPane.rowIndex="8" onAction="#handleSubmitButton"/>
        <Button text="Back" GridPane.columnIndex="0" GridPane.rowIndex="8" onAction="#handleBackButton" />
        <Text fx:id="actionTarget" GridPane.rowIndex="7" GridPane.columnSpan="1"/>
</GridPane>

