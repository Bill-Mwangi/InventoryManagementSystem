<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bill.controllers.AssignedProductsController" stylesheets="@../css/styles.css"
      styleClass="root">

    <TableView fx:id="assignedProductsTable" styleClass="table">
        <columns>
            <TableColumn text="Product" fx:id="product_name" prefWidth="150"/>
            <TableColumn text="Fname" fx:id="first_name" prefWidth="100"/>
            <TableColumn text="Lname" fx:id="last_name" prefWidth="100"/>
            <TableColumn text="Quantity" fx:id="quantity" prefWidth="100"/>
            <TableColumn text="Time" fx:id="time" prefWidth="200"/>
        </columns>

    </TableView>

    <VBox alignment="BOTTOM_CENTER">
        <Button onAction="#handleBackButton" text="Back" prefHeight="40" prefWidth="80" styleClass="backButton"/>
    </VBox>
</VBox>
